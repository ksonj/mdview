{
  "manifest_version": 2,

  "name": "mdview",
  "description": "This extension adds a button to the toolbar that renders plain markdown documents to HTML",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Render markdown"
  },
  "background": {
    "scripts": ["mdview.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
