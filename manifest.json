{
  "manifest_version": 2,

  "name": "mdview",
  "description": "Render markdown pages by button press",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Render markdown"
  },
  "background": {
    "scripts": ["mdview.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
